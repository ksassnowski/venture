{
    "name": "sassnowski/venture",
    "description": "A package to manage complex workflows built on top of Laravel's queue.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Kai Sassnowski",
            "email": "me@kai-sassnowski.com"
        }
    ],
    "require": {
        "php": "~8.2.0 || ~8.3.0 || ~8.4.0",
        "ext-json": "*",
        "illuminate/bus": "^11.0 || ^12.0",
        "illuminate/container": "^11.0 || ^12.0",
        "illuminate/events": "^11.0 || ^12.0",
        "illuminate/queue": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0",
        "laravel/serializable-closure": "^1.2 || ^2.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.29",
        "ergebnis/php-cs-fixer-config": "^6.0",
        "larastan/larastan": "^3.6",
        "lorisleiva/laravel-actions": "^2.5.1",
        "mockery/mockery": "^1.5.1",
        "orchestra/testbench": "^8.0 || ^9.0",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpunit/phpunit": "^11.5",
        "roave/security-advisories": "dev-latest",
        "spatie/laravel-ignition": "^2.0"
    },
    "suggest": {
        "lorisleiva/laravel-actions": "To use Laravel Actions as workflow jobs"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Sassnowski\\Venture\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sassnowski\\Venture\\VentureServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@composer normalize"
        ],
        "post-update-cmd": [
            "@composer normalize"
        ],
        "analyze": [
            "vendor/bin/phpstan analyze -c phpstan.neon"
        ],
        "check": [
            "@cs",
            "@analyze",
            "@test"
        ],
        "cs": [
            "mkdir -p .build/php-cs-fixer",
            "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --diff --verbose"
        ],
        "test": [
            "vendor/bin/pest"
        ]
    }
}
